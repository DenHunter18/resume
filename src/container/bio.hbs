{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>

    <h1>{{name}}</h1>
    <section>
        <div>
            <ul>
                <li>
                    <div><strong>Birthdate:</strong> {{birthdate}}</div>
                    <div><strong>Birthplace:</strong> {{birthplace}}</div>
                    <div><strong>Deathplace:</strong> {{deathdate}}</div>
                    <div><strong>Nationality:</strong> {{nationality}}</div>
                    <div><strong>Occupation:</strong> {{occupation}}</div>
                    <div><em>Known for:</em></div>
                    {{#each known_for}}
                    <ul>
                        <li>
                            <div><em>{{this}}</em></div>
                        </li>
                    </ul>
                    {{/each}}
                </li>
            </ul>
        </div>
    </section>
    <hr>
    <div>
        <section>
            {{> title data="Education" big=true}}
            <br>
            <ul>
                {{#each education}}
                <li>
                    <div><strong>Degree:</strong> {{degree}}</div>
                    <div><strong>Field:</strong> {{field}}</div>
                    <div><strong>Institution:</strong> {{institution}}</div>
                    <div><strong>Year:</strong> {{year}}</div>
                </li>
                {{/each}}
            </ul>
        </section>
    </div>
    <section>
        <ul>
            <div>
                <h3>Notable publications:</h3>
            </div>
            <br>
            {{#each notable_publications}}
            <li>
                <div>{{title}} /{{year}}</div>
                <div>{{publisher}}</div>
            </li>
            {{/each}}
        </ul>
    </section>

    <section>
        <ul>
            <div>
                <h3>Partners</h3>
            </div>
            <br>
            {{#each partners}}
            <li>
                <div><b>Name:</b> {{name}}</div>
                <div><b>Relationship:</b> {{relationship}}</div>
                <div><b>Years:</b> {{years}}</div>
            </li>
            {{/each}}
        </ul>
    </section>
    <section>
        <ul>
            <div>
                <h3>Awards</h3>
            </div>
            <br>
            {{#each awards}}
            <li>
                <div><b>Title:</b> {{title:}}</div>
                <div><b>Year:</b> {{year}}</div>
                <div><b>Description:</b> {{description}}</div>
            </li>
            {{/each}}
            <br>
            <br>
            <div><b><em>Influences</em></b></div>
            <br>
            {{#each influences}}
            <ul>
                <li>
                    <div><em>{{this}}</em></div>
                </li>
            </ul>
            {{/each}}
            <br>
            <div><b><em>Influenced</em></b></div>
            <br>
            {{#each influenced}}
            <ul>
                <li>
                    <div><em>{{this}}</em></div>
                </li>
            </ul>
            {{/each}}
            <br>
            <div><b><em>Quotes</em></b></div>
            <br>
            {{#each quotes}}
            <ul>
                <li>
                    <div><em>{{this}}</em></div>
                </li>
            </ul>
            {{/each}}
        </ul>
    </section>
    <section>
        <ul>
            <div>
                <h3>Major discoveries</h3>
            </div>
            <br>
            {{#each major_discoveries}}
            <li>
                <div><b>Title:</b> {{title:}}</div>
                <div><b>Year:</b> {{year}}</div>
                <div><b>Description:</b> {{description}}</div>
            </li>
            {{/each}}
        </ul>
    </section>
    <section>
        <ul>
            <div>
                <h3>Contributions</h3>
            </div>
            <br>
            {{#with contributions}}
            <li>
                <div><b>Title:</b> {{title:}}</div>
                <div><b>Description:</b> {{description}}</div>
                <div><b>Year:</b> {{year}}</div>
                <div><b>Field:</b> {{field}}</div>
            </li>
            {{/with}}
        </ul>
    </section>




</div>


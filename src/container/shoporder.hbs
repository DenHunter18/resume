{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<section>
    <div class="card col-12">
        {{#with navigation}}
        <div class="nav">
            {{#each links}}
            <div class="row nav-item px-2">
                {{#if href}}
                <a href="{{href}}" class="nav-link" target="blank">{{text}}</a>
                {{else}}
                <a href="{{href}}" class="nav-link disabled" target="blank">{{text}}</a>
                {{/if}}
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>
</section>
<section>
    <div class="row col-12">
        <h1 class="text-dark pt-5 pb-4">{{header}}</h1>
        <div class="col-8">
            {{#with contacts_data}}
            <h2 class="text  pt-1 pb-2">{{title}}</h2>
            <div class="row  pb-3">
                {{#each buttons}}
                {{#if isPrimary}}
                <div class="col-5">
                    <button class="btn btn-warning text-light">{{text}}</button>
                </div>
                {{/if}}
                {{#if isOutline}}
                <div class="col-5">
                    <button class="btn btn-outline-warning">{{text}}</button>
                </div>
                {{/if}}
                {{/each}}
            </div>
            {{#with form}}
            <div class="row">
                {{#with input}}
                <div class="row pt-2 pb-5">
                    <div class="col-6">
                        {{#with surname}}
                        <label class="form-label"> {{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text"> {{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-6">
                        {{#with name}}
                        <label class="form-label"> {{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text"> {{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-6">
                        {{#with phone}}
                        <label class="form-label"> {{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text"> {{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-6">
                        {{#with email}}
                        <label class="form-label"> {{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text"> {{caption}}</div>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
            </div>
            <hr class="col-12 gy-3">
            <div class="mt-3 mb-3">
                {{#each switch}}
                <div class="form-check form-switch">
                    {{#if isActive}}
                    <label class="form-check-label">{{text}}</label>
                    <input type="checkbox" class="form-check-input">
                    {{else}}
                    <label class="form-check-label">{{text}}</label>
                    <input type="checkbox" class="form-check-input">
                    {{/if}}
                </div>
                {{/each}}
            </div>
            <hr class="col-12 gy-3">
            {{/with}}
            {{/with}}
        </div>
        <div class="col-4">
            <div class="card mt-3 mb-2">
                {{#each action_block}}
                <div class="card-body">
                    {{#if isSuccess}}
                    <button class="btn btn-success">{{text}}</button>
                    {{/if}}
                    {{#if isDanger}}
                    <button class="btn btn-danger">{{text}}</button>
                    {{/if}}
                    {{#if isInfo}}
                    <button class="btn btn-info">{{text}}</button>
                    {{/if}}
                </div>
                {{/each}}
            </div>
            <div class="card pt-2">
                {{#with total}}
                <div card="body ">
                    <h3 class="p-2">{{title}}</h3>
                    {{#each item_list}}
                    <div class="ps-2">{{name}}: {{price}}</div>
                    {{/each}}
                    <hr>
                    {{#each additional_info}}
                    <div class="ps-2">{{text}}: {{value}}</div>
                    {{/each}}
                    <hr>
                    {{#with total_price}}
                    <div class="ps-2">{{text}}: {{value}}</div>
                    {{/with}}
                    <hr>
                    {{#each button}}
                    {{#if isPrimary}}
                    <button class="btn btn-primary ms-1">{{text}}</button>
                    {{/if}}
                    {{#if isOutline}}
                    <button class="btn btn-outline-primary m-1">{{text}}</button>
                    {{/if}}
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </div>

        <div>
            {{#with delivery}}
            <h2 class="text mb-3">{{title}}</h2>
            <div class="card col-8 row mb-3">
                {{#each select}}
                <div class="col-6 mb-1">
                    <div class="row">
                        <label class="form-label">{{label}}</label>
                        <select class="form-select">
                            <option>{{placeholder}}</option>
                            {{#each options}}
                            <option value="#">{{text}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                {{/each}}
            </div>
            {{#each delivery_type}}
            <div class="form-check">
                <label class="form-check-label"> {{type}}</label>
                <input name="choose" class="form-check-input" type="radio">
            </div>
            {{/each}}
            <hr class="col-8 gy-3">
            {{#with payment}}
            <h2 class="text mb-3">{{title}}</h2>
            {{#each list}}
            <div class="form-check">
                <label class="form-check-label"> {{type}}</label>
                <input name="choose" class="form-check-input" type="radio">
                <div class="form-text">{{description}}</div>
            </div>
            {{/each}}
            {{/with}}

            <hr class="col-8 gy-3">

            <div class="row col-8">
                {{#with contact}}
                <h2 class="text mb-3">{{title}}</h2>
                <div class="col-6">
                    {{#with surname}}
                    <label class="form-label"> {{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text"> {{caption}}</div>
                    {{/with}}
                </div>
                <div class="col-6">
                    {{#with name}}
                    <label class="form-label"> {{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text"> {{caption}}</div>
                    {{/with}}
                </div>
                <div class="col-6">
                    {{#with phone}}
                    <label class="form-label"> {{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text"> {{caption}}</div>
                    {{/with}}
                </div>
                <div class="col-6">
                    {{#with email}}
                    <label class="form-label"> {{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text"> {{caption}}</div>
                    {{/with}}
                </div>
                {{/with}}
            </div>
            <hr class="col-8 gy-3">

            <div class="col-8 mb-3">
                {{#with coment}}
                <label class="form-label"> {{label}}</label>
                <input class="form-control" placeholder="{{placeholder}}">
                {{/with}}
            </div>
            {{/with}}
        </div>
        <hr class="col-8 gy-3">

        <div class="col-8">
            {{#with coupon}}
            <h2 class="text mb-3">{{title}}</h2>
            {{#with select}}
            {{#with availabel_coupon}}
            <div class="row">
                <label class="form-label">{{label}}</label>
                <select class="form-select">
                    <option>{{placeholder}}</option>
                    {{#each options}}
                    <option value="#">{{text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/with}}
            {{#with friend_coupon}}
            <div class="row mt-3 mb-3">
                <label class="form-label">{{label}}</label>
                <select class="form-select form-select-sm">
                    <option>{{placeholder}}</option>
                    {{#each options}}
                    <option value="#">{{text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/with}}
            {{/with}}

            <div class="mb-3">
                {{#with add}}
                {{#with friend}}
                <div class="row">
                    <label class="form-label">{{label}}</label>
                    <input class="form-control" placeholder="{{placeholder}}">
                    <div class="form-text">{{caption}}</div>
                </div>
                {{/with}}
                {{#with colleague}}
                <div class="row mt-2">
                    <label class="form-label">{{label}}</label>
                    <input class="form-control form-control-sm" placeholder="{{placeholder}}">
                    <div class="form-text">{{caption}}</div>
                </div>
                {{/with}}
                {{/with}}
            </div>

            {{/with}}
        </div>
        <hr class="col-8 gy-3">

        {{#with quiz}}
        <h2 class="text mb-3">{{title}}</h2>
        <div class="mb-3">
            {{#with preference}}
            <div class="mb-3">{{title}}</div>
            {{#each options}}
            <div class="form-check">
                <label class="form-check-label"> {{this}}</label>
                <input name="choose" class="form-check-input" type="radio">
            </div>
            {{/each}}
            {{/with}}
        </div>

        <div class="col-8">
            {{#with your_expirience}}
            <label class="form-label">{{label}}</label>
            <input class="form-control col-8">
            {{/with}}
        </div>
        <div class="col-8">
            {{#with purchase_frequency}}
            <div class="row mt-3 mb-3">
                <label class="form-label">{{label}}</label>
                <select class="form-select form-select-sm">
                    <option>{{placeholder}}</option>
                    {{#each options}}
                    <option value="#">{{text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/with}}
        </div>
        <div class="row col-8">
            {{#with factors}}
            <div class="form-label">{{title}}</div>
            {{#each options}}
            <div class="col-1"><input type="checkbox" class="form-check-input"></div>
            <div class="form-text col-11">{{this}}</div>
            {{/each}}
            {{/with}}
        </div>
        {{/with}}
        <hr class="col-12 gy-3">

        <footer>
            <div class="row">
                <ul class="nav">
                    {{#each footer}}
                    <div class="col-2">
                        {{#each this}}
                        <li class="nav-item px-3">
                            <a class="nav-link {{#if @last}} disabled{{/if}}" target="blank">{{text}}</a>
                        </li>
                        {{/each}}
                    </div>
                    {{/each}}
                </ul>
            </div>
        </footer>

    </div>
</section>
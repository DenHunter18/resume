{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
    <section>
        <div class="card-title">
            {{#with navigation}}
            <div class="row text-primary">
                {{#each links}}
                <a class="text-primary col-2" href="{{href}}" class="btn btn-link" target="blank">{{text}}</a>
                {{/each}}
                <a class="btn btn-primary col-2" href="{{button.href}}" target="blank">{{button.text}}</a>
            </div>
            {{/with}}
        </div>
    </section>
    <hr>

    <section>
        <div>{{#with header}}
            <h1 class=" row col-3">{{title}}</h1>
            <p>{{description}}</p>
            <a class="btn btn-primary" href="{{button.link}}" target="blank">{{button.text}}</a>
        </div>{{/with}}
    </section>
    <hr>


    <section class="row col-12 g-2">{{#with city}}
        <h2>{{title}}</h2>

        {{#each cards}}
        <div class="row col-6 g-5">
            <div class="card">
                <img src="{{picture.src}}" alt="{{picture.alt}}">
                <div class="card-body">

                    <h6 class="card-title"> {{title}}</h6>
                    <p>{{description}}</p>
                    <a href="{{button.href}}" target="blank" class="btn btn-primary">{{button.text}}</a>

                </div>
            </div>
        </div>{{/each}}

        {{/with}}
    </section>

    <hr>

    <section>
        <div>{{#with winner}}
            <h2>{{title}}</h2>
            {{#with table}}
            <table class="table table-bordered">

                <thead>
                    <tr>
                        {{#each head}}
                        <th>{{this}}</th>
                        {{/each}}
                    </tr>
                </thead>

                <tbody>
                    {{#each user}}
                    <tr>
                        <td>{{place}}</td>
                        <td>{{name}}</td>
                        <td>{{surname}}</td>
                        <td>{{nickname}}</td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>
            {{/with}}

        </div>{{/with}}
    </section>
    <hr>

    <section>
        {{#with gallery}}
        <h2>{{title}}</h2>
        <div class="row g-2">
            {{#each cards}}
            <div class="card col-4">
                <ul class="list-group">
                    <div class="card-header">{{name}}</div>
                    {{#each items}}
                    <li class="list-group-item">
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>
    <hr>

    <section class="row col-10">
        {{#with relaxion}}
        <div class="display-3">{{title}}</div>
        <div class="row g-4">
            {{#each cards}}
            <div class="card text-bg-secondary col-6">
                <div class="card-header">{{header}}</div>
                <div class="card-title">{{title}}</div>
                <p class="card-body">{{description}}</p>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>
    <hr>

    <section>{{#with rest}}
        <div class="row g-2">
            {{#each cards}}
            <div class="card text-center col-6">
                <div class="card-header ">{{header}}</div>
                <div class="card-title">{{title}}</div>
                <p class="card-body">{{description}}</p>
                <button class="btn btn-primary">{{button}}</button>
                <div class="card-footer">{{footer}}</div>
            </div>

            {{/each}}
        </div>{{/with}}
    </section>
    <hr>

    <section class="row col-10">
        {{#with proposition}}
        <div class="display-2">{{title}}</div>
        <div class="row g-4">
            {{#each card}}
            <div class="card text-bg-warning col-6">
                <div class="card-header">{{header}}</div>
                <div class="card-title text-secondary">{{title}}</div>
                <p class="card-body">{{description}}</p>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>
    <hr>

    <footer>{{#with footer}}
        <h5>{{title}}</h5>
        <div class="card-title">
            <div class="table">
                <div class="row text-primary">

                    <div class="list-group-item col-3">
                        {{#each navigation}}
                        <div>
                            <a class="text-primary" href="{{href}}" target="blank">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                    <div class="list-group-item col-3">
                        {{#each socialMedia}}
                        <div>
                            <a href="{{link}}" class="btn btn-outline-dark" target="blank">{{name}}</a>
                        </div>
                        {{/each}}
                    </div>
                    <div class="list-group-item col-3">
                        {{#each partners}}
                        <div>
                            <a href="{{link}}" class="btn btn-outline-info" target="blank">{{name}}</a>
                        </div>
                        {{/each}}
                    </div>

                </div>

            </div>
        </div>
        {{/with}}
    </footer>
</main>

